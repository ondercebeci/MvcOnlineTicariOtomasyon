@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Siparislerim";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}
<br />
<h2>Siparis Geçmişim</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>Ürün Adı</th>
        <th>Fiyat</th>
        <th>Tarih</th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.Uruns.UrunAd</td>
        <td>@item.Uruns.SatisFiyat</td>
        <td>@Convert.ToDateTime(item.Tarih).ToString("dd/mm/yyyy")</td>
    </tr>
    }
</table>

