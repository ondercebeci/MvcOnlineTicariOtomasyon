@using MvcOnlineTicariOtomasyon.Models.Siniflar;
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
@using (@Html.BeginForm("Index", "Urun", FormMethod.Get))
{
<p>
    Ürün Adı: @Html.TextBox("p")
    <input type="submit" value="Ara"/>
</p>
}
<br />
<table class="table table-bordered">
    <tr>
        <th>URÜN</th>
        <th>MARKA</th>
        <th>STOK</th> 
        <th>ALIŞ FİYAT</th>
        <th>SATIŞ FİYAT</th>
        <th>KATEGORİ</th>
        <th>SİL</th>    
        <th>GÜNCELLE</th>
        <th>SATIŞ YAP</th>
                
        
    </tr>
    @foreach(var item in Model)
            {
                <tr>
                    <td>@item.UrunAd</td>
                    <td>@item.Marka  </td>
                    <td>@item.Stok</td>
                    <td>@item.AlisFiyat</td>
                    <td>@item.SatisFiyat</td>
                    <td>@item.Kategori.KategoriAd</td>
                    <td><a href="/Urun/UrunSil/@item.Urunid/" class="btn btn-danger">SİL</a></td>
                    <td><a href="/Urun/UrunGetir/@item.Urunid/" class="btn btn-success">GÜNCELLE</a></td>
                    <td><a href="/Urun/SatisYap/@item.Urunid/" class="btn btn-default" style="background-color:cornflowerblue; color:white">SATIŞ YAP</a></td>
                </tr>
            }
</table>
<a href="/Urun/YeniUrun/" class="btn btn-primary">Yeni Ürün Ekle</a>

