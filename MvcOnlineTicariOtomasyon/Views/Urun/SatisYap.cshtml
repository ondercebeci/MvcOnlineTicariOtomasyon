@model MvcOnlineTicariOtomasyon.Models.Siniflar.SatisHareket
@{
    ViewBag.Title = "SatisYap";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>SatisYap</h2>
<form class="form-group" method="post">
    @Html.LabelFor(x => x.Urunid)
    <input type="text" name="Urunid" value="@ViewBag.d1" class="form-control" readonly />
    <br />
    @Html.LabelFor(x => x.Personels)
    @Html.DropDownListFor(x => x.Personelid, (List<SelectListItem>)ViewBag.d3, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Cariid)
    @Html.TextBoxFor(x => x.Cariid, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Adet)
    <input type="number" id="txt1" name="Adet" class="form-control" min="0" max="10" onchange="sum();"  /> 
    <br />
    @Html.LabelFor(x => x.Fiyat)
    <input type="text" id="txt2" name="Fiyat" value="@ViewBag.d2" class="form-control" onkeyup="sum();" />
    <br />
    @Html.LabelFor(x => x.ToplamTutar)
<input type="text" id="txt3" name="ToplamTutar" value="0" class="form-control" readonly />
    <br />
    @Html.LabelFor(x => x.Tarih)
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Satış Yap</button>
</form>
<script>
    function sum()
    {
        var sayi1 = document.getElementById('txt1').value;
        var sayi2 = document.getElementById('txt2').value;
        var sonuc = parseInt(sayi1) * parseInt(sayi2);
        if (!isNaN(sonuc)) {

            document.getElementById('txt3').value = sonuc;

        }
    }
    
</script>