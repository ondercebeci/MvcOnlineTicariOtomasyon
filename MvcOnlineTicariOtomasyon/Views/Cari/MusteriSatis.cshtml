@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "MusteriSatis";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Cari Adı: @ViewBag.Cari</li>
</ol>
<br />
<table class="table table-striped-columns">
    <tr>
        <th>Satış Id</th>
        <th>Ürün</th>
        <th>Personel</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Toplam</th>
        <th>Tarih</th>
        <th>Yazdır</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
        <td>@item.Satisid</td>
        <td>@item.Uruns.UrunAd</td>
        <td>@item.Personels.PersonelAd @item.Personels.PersonelSoyad</td>
        <td>@item.Fiyat</td>
        <td>@item.Adet</td>
        <td>@item.ToplamTutar</td>
        <td>@item.Tarih</td>
        <td><a href="#" class="btn btn-outline-danger" style="background-color:cyan">Yazdır</a></td>
        </tr>
    }

</table>

